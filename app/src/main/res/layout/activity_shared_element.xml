<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="20dp"
    android:id="@+id/click_reveal"
    android:gravity="center_horizontal">

    <TextView
        android:background="#f0ce11"
        android:gravity="center"
        android:elevation="4dp"
        android:padding="20dp"
        android:id="@+id/text_desc"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/activity_title"
        android:textSize="30sp"
        android:textColor="@android:color/darker_gray"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Smartherd"
        android:transitionName="smartherd_shared"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_alignParentStart="true"
        android:layout_below="@id/activity_title"
        android:id="@+id/linear_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true">

        <ImageView
            android:layout_weight="1"
            android:transitionName="logo_shared"
            android:id="@+id/logo_reveal"
            android:src="@drawable/ic_lin"
            android:layout_width="200dp"
            android:layout_height="175dp"/>
        <ImageView
            android:layout_weight="1"
            android:transitionName="profile_pic_shared"
            android:src="@drawable/ic_lin2"
            android:layout_width="200dp"
            android:layout_height="175dp"/>
    </LinearLayout>

    <TextView
        android:text="welcome to smartherd \nstay turn for more tutorial and courses"
        android:id="@+id/textView2"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_below="@id/textView2"
        android:layout_marginTop="51dp"
        android:id="@+id/exit_button"
        android:layout_alignParentEnd="true"
        android:text="exit [back press]"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

</RelativeLayout>