<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dummy_click"
        android:text="Ripple With Border"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/dummy_click2"
        android:text="Ripple Without Border"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/dummy_click3"
        android:text="Custom Ripple With Border"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/dummy_click4"
        android:text="Custom Ripple Without Border"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>